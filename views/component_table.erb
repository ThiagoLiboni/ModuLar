<!DOCTYPE html>
<html lang="PT-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body> 
    <script>
        const verificarPagina = window.location.pathname.split("/").pop();
        if(verificarPagina=="Reckons"){
        // Recebe os dados de ruby
         let dadosJSON = '<%= dados.to_json %>';

         // Garante os dados ter uma leitura como string
         let dados = JSON.parse(dadosJSON);


        // Armazenar os dados no localStorage
        localStorage.setItem('dadosDaTabela', JSON.stringify(dados));
        let data = localStorage.getItem('dadosDaTabela')
        if(data){
            console.log("dados recebidos", data)
        }
        }
    </script>
</body>
</html>